<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ViewActivity">
    

    <ImageView
        android:id="@+id/fullImage"
        android:layout_width="match_parent"
        android:scaleType="fitXY"
        android:background="@color/colorAccent"
        android:layout_height="match_parent"/>

    <com.github.clans.fab.FloatingActionMenu
        android:id="@+id/floatMenu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:layout_alignParentEnd="true">

        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/setWallpaper"
            android:src="@drawable/ic_baseline_wallpaper_24"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:fab_size="mini"
            app:fab_label="Set Wallpaper"/>

        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/shareWallpaper"
            android:src="@drawable/ic_baseline_share_24"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:fab_size="mini"
            app:fab_label="Share Image"/>

        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/downloadWallpaper"
            android:src="@drawable/ic_baseline_arrow_downward_24"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:fab_size="mini"
            app:fab_label="Download Image"/>

    </com.github.clans.fab.FloatingActionMenu>

</RelativeLayout>